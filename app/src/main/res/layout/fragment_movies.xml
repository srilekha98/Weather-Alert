<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="info.androidhive.navigationdrawer.fragment.MoviesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       >

        <TextView
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:lineSpacingExtra="10sp"
            android:padding="50dp"
            android:paddingBottom="50dp"
            android:text="GOOD DAY MAHEEDHAR!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="normal"
            tools:padding="50dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:textAlignment="center"
            android:lineSpacingExtra="8sp"
            android:textSize="16sp"
            tools:padding="50dp" />

        <Button
            android:id="@+id/btnClick"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:alpha="100"
            android:padding="20dp"
            android:text="Click Me to set alert Time"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="30dp"
                android:id="@+id/lblTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="Current Alert Time:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/output"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />


        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_marginStart="110dp"
            android:layout_height="wrap_content"
            android:onClick="startAlarm"
            android:text="Set Alerts"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_marginStart="110dp"
            android:layout_height="wrap_content"
            android:onClick="cancelAlarm"
            android:text="Cancel Alerts"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</FrameLayout>
